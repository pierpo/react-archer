{
  "name": "react-archer",
  "description": "Draw arrows between DOM elements in React",
  "main": "lib/react-archer.js",
  "module": "lib/react-archer.js",
  "version": "0.3.1",
  "license": "MIT",
  "dependencies": {
    "react": "16.6.0",
    "react-dom": "16.6.0",
    "resize-observer-polyfill": "1.5.0"
  },
  "homepage": "https://github.com/pierpo/react-archer",
  "repository": {
    "type": "git",
    "url": "https://github.com/pierpo/react-archer"
  },
  "bugs": {
    "url": "https://github.com/pierpo/react-archer/issues"
  },
  "scripts": {
    "dev": "webpack-dev-server --hot --progress --colors --config ./webpack.config.js",
    "build": "webpack --config webpack.prod.config.js",
    "deploy:example": "webpack --config webpack.example-app.config.js && gh-pages -d example-dist",
    "pretest": "yarn lint && yarn flow",
    "prepare": "npm run build",
    "lint": "eslint --ext .js,.jsx src/",
    "test:watch": "jest ./src/ --watch",
    "test": "jest --coverage ./src/"
  },
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "cross-env": "5.1.3",
    "css-loader": "0.28.10",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.6.0",
    "eslint": "5.8.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-config-standard-react": "7.0.2",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "0.85.0",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.6.0",
    "prettier": "1.10.2",
    "style-loader": "0.20.2",
    "webpack": "4.24.0",
    "webpack-cli": "3.1.2",
    "webpack-dev-server": "3.1.10"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "./shim.js",
      "./setup-tests.js"
    ]
  }
}
